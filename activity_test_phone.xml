<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dashboard_background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/camera_test"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:text="camera"
                    android:background="@drawable/test_buttons_square"
                    
                    />

                <Button
                    android:id="@+id/Button6"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="mic" />

                <Button
                    android:id="@+id/audio_test"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="audio" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"

                >

                <Button
                    android:id="@+id/Button12"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="touch" />

                <Button
                    android:id="@+id/Button11"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="Button" />

                <Button
                    android:id="@+id/Button10"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="Button" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/Button15"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="Button" />

                <Button
                    android:id="@+id/Button14"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="Button" />

                <Button
                    android:id="@+id/Button13"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="Button" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/Button18"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="Button" />

                <Button
                    android:id="@+id/Button17"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="Button" />

                <Button
                    android:id="@+id/Button16"
                    android:layout_width="@dimen/box_dimen"
                    android:layout_height="@dimen/box_dimen"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_buttons_square"
                    android:text="Button" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/result_card"
                    android:layout_height="@dimen/box_dimen"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/colorAccent"
                    >
                    <TextView
                        android:id="@+id/tv_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        />

                </android.support.v7.widget.CardView>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>