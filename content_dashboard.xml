<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/dashboard_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vishal.myapplication.dashboard"
    tools:showIn="@layout/app_bar_dashboard">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cardView">

   <LinearLayout
       android:id="@+id/l1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@android:color/white"
       >
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="130dp"
           android:scaleType="fitXY"
           android:src="@drawable/complaint_card_image"
           />

       <TextView
           android:padding="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20sp"
           android:text="Click on below button to register your complaint and get discounted prices on fix."
           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/colorAccent"
           style="@style/Widget.AppCompat.Button.Borderless"
           android:text="complaint"
           />

   </LinearLayout>
</android.support.v7.widget.CardView>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/cardView"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tb1"

        >
        <android.support.v7.widget.CardView
            android:layout_height="@dimen/box_dimen"
            android:layout_width="@dimen/box_dimen"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/colorAccentshade1"
            android:layout_weight="1"

            >


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_height="@dimen/box_dimen"
            android:layout_width="@dimen/box_dimen"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginEnd="5dp"
            >

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_height="@dimen/box_dimen"
            android:layout_width="@dimen/box_dimen"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorAccentshade2"
            >

        </android.support.v7.widget.CardView>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/tb1"
        android:gravity="center_horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"

        >
        <android.support.v7.widget.CardView
            android:layout_height="@dimen/box_dimen"
            android:layout_width="@dimen/box_dimen"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorAccentshade1"

            >

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_height="@dimen/box_dimen"
            android:layout_width="@dimen/box_dimen"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"

            >

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_height="@dimen/box_dimen"
            android:layout_width="@dimen/box_dimen"
            app:cardBackgroundColor="@color/colorAccentshade2"
            android:layout_weight="1"

            >

        </android.support.v7.widget.CardView>


    </TableRow>

</RelativeLayout>
